# Git History MCP Configuration
# Copy this file to .env and fill in your values

# Git Repository Configuration
GIT_REPO_PATH=/path/to/your/git/repository

# GitLab Configuration (if using GitLab integration)
GITLAB_PERSONAL_ACCESS_TOKEN=your_gitlab_token_here
GITLAB_API_URL=https://your-gitlab-instance.com/api/v4
GITLAB_READ_ONLY_MODE=false

# GitHub Configuration (if using GitHub integration)  
GITHUB_TOKEN=your_github_token_here
GITHUB_API_URL=https://api.github.com

# MCP Server Configuration
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# Output Configuration
DEFAULT_OUTPUT_PATH=./reports
DEFAULT_TIME_ESTIMATE_MULTIPLIER=1.0

# PDF Export Configuration
PDF_PAGE_FORMAT=A4
PDF_INCLUDE_CHARTS=true

# Security Configuration set to 0 to bypass cert issues
NODE_TLS_REJECT_UNAUTHORIZED=0

# Development Configuration
DEBUG=false
LOG_LEVEL=info