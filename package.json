{
  "name": "git-history-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for parsing git history and generating comprehensive development reports",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "git-history-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "inspector": "npm run build && npx @modelcontextprotocol/inspector node ./dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^10.9.1",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "fs-extra": "^11.3.0",
    "markdown-it": "^14.0.0",
    "mermaid": "^10.6.0",
    "path": "^0.12.7",
    "puppeteer": "^21.0.0",
    "simple-git": "^3.20.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/markdown-it": "^13.0.9",
    "@types/node": "^20.11.0",
    "@vitest/ui": "^1.6.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
